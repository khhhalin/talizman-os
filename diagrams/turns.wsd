@startuml turns
title Turn System

!include enums.wsd
hide enum

class TurnManager <<Autoload>> {
  - Array<Player> player_order
  - int current_turn_index
  - bool game_active
  + start_turn()
  + end_turn()
  + next_player()
  + get_current_player(): Player
  + is_player_turn(player_id: int): bool
  --signals--
  + turn_started(player: Player)
  + turn_ended(player: Player)
  + round_completed()
}

class Player <<CharacterBody2D>>
class UIManager <<CanvasLayer>>
class TurnIndicatorUI <<Control>>

TurnManager --> Player : tracks order
TurnManager --> UIManager : notifies
UIManager --> TurnIndicatorUI : displays

@enduml